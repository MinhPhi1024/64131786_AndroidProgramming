<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#4DD0E1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="TÍNH CHU VI - DIỆN TÍCH">
        </TextView>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/raG"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbHinhTron"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Hình tròn"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rbHinhVuong"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Hình vuông"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rbHinhChuNhat"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Hình Hinh Chữ Nhật"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:checked="true"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:background="#4FC3F7"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập chiều dài:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">
        </TextView>
        <EditText
            android:id="@+id/edtChieuDai"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Nhập chiều dài"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColorHint="@color/black"



    </LinearLayout>






</LinearLayout>
